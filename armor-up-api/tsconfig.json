{
    "compilerOptions": {
      "allowUnreachableCode": false,
      "allowUnusedLabels": false,
      "declaration": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["es2018"],
      "module": "commonjs",
      "noEmitOnError": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "pretty": true,
      "sourceMap": true,
      "strict": true,
      "target": "es2018",
      "outDir": "./dist",
      "skipLibCheck": true
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "src/**/*"
    ],
    "rootDir": "./"
  }